# ============================================================================
# AuraLink Communication Service Environment Configuration
# ============================================================================

# Matrix Synapse Configuration
# ============================================================================
SYNAPSE_SERVER_NAME=auralink.network
SYNAPSE_REPORT_STATS=no

# Matrix Registration
ENABLE_REGISTRATION=false
MATRIX_REGISTRATION_SECRET=CHANGE_THIS_SECRET_IN_PRODUCTION

# Database Configuration (PostgreSQL)
# ============================================================================
COMM_POSTGRES_USER=auralink
COMM_POSTGRES_PASSWORD=auralink_comm_pass
COMM_POSTGRES_DB=auralink_comm
COMM_POSTGRES_HOST=postgres-comm
COMM_POSTGRES_PORT=5432

# Redis Configuration
# ============================================================================
COMM_REDIS_HOST=redis-comm
COMM_REDIS_PORT=6379
COMM_REDIS_PASSWORD=auralink_redis_pass

# AuraLink Service Integration
# ============================================================================
DASHBOARD_SERVICE_URL=http://dashboard-service:8080
AI_CORE_URL=http://ai-core:8000
WEBRTC_SERVER_URL=http://webrtc-server:7880

# Feature Flags
# ============================================================================
ENABLE_FEDERATION=true
ENABLE_MESH_ROUTING=true
ENABLE_AURAID=true
ENABLE_CROSS_APP_CALLING=true
ENABLE_TRUST_SYSTEM=true

# Security Settings
# ============================================================================
# JWT secret for internal API authentication
COMM_SERVICE_JWT_SECRET=CHANGE_THIS_SECRET_IN_PRODUCTION

# API rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Federation Settings
# ============================================================================
FEDERATION_POLICY_TYPE=whitelist
MINIMUM_TRUST_SCORE=50.0
REQUIRE_MUTUAL_TRUST=true
REQUIRE_ENCRYPTION=true

# Mesh Network Settings
# ============================================================================
MESH_ROUTE_CACHE_TTL_SECONDS=300
AI_ROUTING_ENABLED=true
AI_MODEL_VERSION=v1.0

# Monitoring & Observability
# ============================================================================
ENABLE_PROMETHEUS_METRICS=true
METRICS_PORT=9000
LOG_LEVEL=INFO

# Email Configuration (for verification)
# ============================================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@auralink.network
SMTP_PASSWORD=CHANGE_THIS_PASSWORD
SMTP_FROM=AuraLink <noreply@auralink.network>

# SMS Configuration (for verification)
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
