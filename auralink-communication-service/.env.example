# AuraLink Communication Service - Environment Configuration
# Copy this file to .env and fill in your values

# ===== Service Configuration =====
SERVICE_NAME=auralink-communication-service
ENVIRONMENT=development
SERVICE_PORT=8001
LOG_LEVEL=INFO

# ===== Database Configuration =====
DATABASE_URL=postgresql://auralink:password@localhost:5432/auralink_comm
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_POOL_TIMEOUT=30
DATABASE_COMMAND_TIMEOUT=60

# ===== Redis Configuration =====
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# ===== Matrix Server Configuration =====
MATRIX_SERVER_URL=http://localhost:8008
MATRIX_ADMIN_TOKEN=your_matrix_admin_token_here
MATRIX_HOMESERVER=auralink.network

# ===== Service URLs =====
DASHBOARD_URL=http://dashboard-service:8080
AI_CORE_URL=http://ai-core:8000
AI_CORE_GRPC_URL=ai-core:50051
WEBRTC_SERVER_URL=http://webrtc-server:7880

# ===== LiveKit Configuration =====
LIVEKIT_URL=wss://livekit.auralink.network
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ===== External Services (Optional) =====
# SendGrid for email verification
SENDGRID_API_KEY=your_sendgrid_api_key

# Twilio for SMS verification
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Stripe for document verification
STRIPE_SECRET_KEY=your_stripe_secret_key

# ===== Security Configuration =====
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
DASHBOARD_JWT_SECRET=shared_secret_with_dashboard

# ===== Rate Limiting Configuration =====
RATE_LIMIT_PER_USER=100
RATE_LIMIT_PER_SERVICE=1000
RATE_LIMIT_WINDOW_SECONDS=60

# ===== Mesh Routing Configuration =====
ROUTE_CACHE_TTL=300
MESH_HEARTBEAT_INTERVAL=30
MESH_NODE_OFFLINE_THRESHOLD=120

# ===== Trust System Configuration =====
TRUST_BASE_SCORE=50.0
TRUST_SUSPENSION_THRESHOLD=20.0
TRUST_ABUSE_PENALTY=20.0

# ===== Feature Flags =====
ENABLE_AIC_PROTOCOL=true
ENABLE_MESH_ROUTING=true
ENABLE_AI_OPTIMIZATION=true

# ===== CORS Configuration =====
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# ===== Monitoring Configuration =====
ENABLE_METRICS=true
ENABLE_TRACING=true
JAEGER_ENDPOINT=http://jaeger:14268/api/traces
